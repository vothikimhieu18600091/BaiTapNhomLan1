#include<iostream>
using namespace std;
int main() {
	int n;
	cout << "\nNhap vao n";
	cin >> n;
	bool kt=true ; //ko có cái này
	while (n =n/10) {
		if ((n % 10) % 2 == 0) {//giả sử cái này sai với mọi số
			kt = false;//thì dòng này ko thực hiện
			break;
		}
	}//ra khỏi vòng lặp thì kt ko có giá trị
	if (kt ==true) {//hỉu rok
		cout << "\nn là so le";
	}
	else
	{
		cout << "\nsai";
	}
	system("pause");
}
